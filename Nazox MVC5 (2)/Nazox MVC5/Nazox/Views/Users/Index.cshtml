<link href="~/assets/css/app.min.css" rel="stylesheet" />




@{

    <div class="row">

        <div class="col-lg-6">
            <div class="card">
                <div class="card-body border-bottom">

                    <div class="user-chat-border">
                        <div class="row">
                            <div class="col-md-5 col-9">
                                <h5 class="font-size-15 mb-1" hidden>@ViewBag.UserName</h5>
                                <p class="text-muted mb-0"><i class="mdi mdi-circle text-success align-middle me-1"></i> Active now</p><br />
                                <p>Username</p>
                                <h5 class="font-size-15 mb-1">@Model.User.Email</h5>
                            </div>
                            <br />
                            @*<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#firstmodal" role="button" aria-controls="offcanvasExample">
                                    Edit Profile
                                </a>*@

                            <a class="btn btn-primary waves-effect waves-light" href="@Url.Action("Edit","Users", new { id = ViewBag.UserId})">Edit My Profile</a>

                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">WENDA Logistics Group</h4>
                    <p class="card-title-desc">My Profile</p>
                    

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">WENDA Logistics</h4>
                    <p class="card-title-desc">
                        My Boookings
                    </p>

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr style="font-weight:bold">
                                <th>
                                    Date Made
                                </th>
                                <th>
                                    Client Name
                                </th>
                                
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.Bookings)
                        {
                            <tr>
                                <td>
                                    @item.DateMade
                                </td>
                                <td>
                                    @item.Client.ClientName
                                </td>
                                @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Booking_ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Booking_ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Booking_ID })
                                </td>*@
                            </tr>
                        }
                     

                    </table>

                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>



}


@{
    ViewData["Title"] = "Register Account";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
    //Layout = "~/Views/_Shared/_Layout.cshtml";

    if (TempData["UserExist"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
                swal("Error!",@Html.Raw(Json.Encode(TempData["UserExist"])),"error");
        </script>
    }
}
<!-- Lightbox css -->
<link href="~/assets/libs/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />
<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Dashboard") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="50" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="50" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Register account</h4>
                                        <p class="text-muted">Get your free WENDA Logistics Group account now.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form class="m-t custom-validation" id="new-node-form" role="form" method="post" action=@Url.Action("RegisterUser", "AuthRegister")>

                                            @Html.AntiForgeryToken()

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label for="useremail">Email</label>
                                                <input type="email" class="form-control" id="useremail" name="useremail" placeholder="Enter email" required>
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-file-2-line auti-custom-input-icon"></i>
                                                <label for="FirstName">First Name</label>
                                                <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter First Name" required>
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-file-2-line auti-custom-input-icon"></i>
                                                <label for="Surname">Surname</label>
                                                <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Enter Surname" required>
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-file-2-line auti-custom-input-icon"></i>
                                                <label for="ContactNumber2">Contact Number</label>
                                                <input type="text" data-parsley-maxlength="10" data-parsley-type="number" class="form-control" id="ContactNumber" name="ContactNumber" placeholder="Enter Contact Number" required>
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-file-2-line auti-custom-input-icon"></i>
                                                <textarea for="Address" class="form-control" id="Address" name="Address" height="50" placeholder="Enter your residential address" required></textarea>
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <div>
                                                    <label for="userpassword">Password</label>
                                                    <input type="password" class="form-control" id="userpassword" name="userpassword" placeholder="Enter password" required />
                                                </div>
                                                <div class="mt-2">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <input type="password" class="form-control" required
                                                           data-parsley-equalto="#userpassword"
                                                           placeholder="Re-Type Password" />
                                                </div>


                                            </div>

                                            @*<div class="auth-form-group-custom mb-4">

                                                    <label for="userpassword">Password</label>
                                                    <div>
                                                        <input type="password" id="userpassword" name="userpassword" class="form-control" required
                                                               placeholder="Password" />
                                                    </div>

                                                    <div class="mt-2">
                                                        <input type="password" class="form-control" required
                                                               data-parsley-equalto="#userpassword"
                                                               placeholder="Re-Type Password" />
                                                    </div>
                                                </div>*@

                                            <div class="text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light popup-form btn btn-primary" type="submit">Register</button>
                                            </div>

                                            <div class="mt-2 text-center">
                                                <p class="mb-0">By registering you agree to the WENDA Logistics Group <a href="#" class="text-primary">Terms of Use</a></p>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <p>Already have an account ? <a href=@Url.Action("Index", "AuthLogin") class="fw-medium text-primary"> Login</a> </p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> WENDA Logistics Group
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg position-static">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>


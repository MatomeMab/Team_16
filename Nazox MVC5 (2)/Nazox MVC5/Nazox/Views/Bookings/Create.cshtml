@model Nazox.Models.Booking

@{
    ViewBag.Title = "Make Booking";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Add Booking</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Client_ID, "Client_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Client_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BookingInstances, "Service_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("Service_ID", ViewBag.data as SelectList, "Select Service")*@

            @*@Html.DropDownList("Service_ID", ViewBag.Service_ID as SelectList, "Select Service")*@

        </div>
    </div>
    <div class="form-group">
        <label for="validationTooltip04" class="form-label">Time Slot</label>
        <div class="col-md-10">
            @*@Html.DropDownList("DateorTimeslotDiriver_ID", ViewBag.TimeSlot_ID as SelectList, "DateorTimeslotDiriver_ID", htmlAttributes: new { @class = "btn btn-sm btn-light dropdown-toggle dropdown-toggle-split" })*@

        </div>
    </div>
    <br />

    <div class="input-group date" data-provide="datepicker">
        <input type="text" id="DateMade" name="DateMade" class="form-control" value="@DateTime.Now">
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
        </div>
    </div>
</div>
}
<br />

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.UserId })
</div>


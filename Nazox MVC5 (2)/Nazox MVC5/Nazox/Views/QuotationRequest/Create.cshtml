        //     $('.timepicker').timepicker({
        //         timeFormat: 'h:mm p',
        //         interval: 60,
        //         dynamic: false,
        //         dropdown: true,
        //         scrollbar: true

        //     });

        // });
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changemonth: true,

@model Nazox.Models.QuotationRequest

@{
    ViewBag.Title = "Create";


}

<h2>Request Quotation</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="alert alert-warning" role="alert">
            For Rental service type "N/A" on the From Address and To Address. For Booking service driver do not select a Truck. For 'Notes' put N/A if not applicable.
        </div>
        <div class="col-lg-12">
            <div class="card BoxAndShadow">
                <div class="card-body">
                    <h4 class="card-title">Client Name</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip01" class="form-label">Name</label>
                                @Html.DropDownList("Client_ID", ViewBag.Client_ID as SelectList, null, htmlAttributes: new { @class = "form-control", required = (string)null })
                                @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip02" class="form-label">From</label>
                                @Html.EditorFor(model => model.FromAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FromAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip01" class="form-label">Service</label>

                                @Html.DropDownList("Service_ID", ViewBag.Service_ID as SelectList, "Choose Service", htmlAttributes: new { @class = "form-control", required = (string)null  })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip02" class="form-label">To Address</label>
                                @Html.EditorFor(model => model.ToAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ToAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip01"  class="form-label">Truck</label>

                                @Html.DropDownList("Truck_ID", ViewBag.Truck_ID as SelectList, "Select Truck", htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 position-relative">
                                <label for="validationTooltip02" class="form-label">Notes</label>
                                @Html.EditorFor(model => model.QuotationReqDescription, new { htmlAttributes = new { @class = "form-control",required="required" } })
                                @Html.ValidationMessageFor(model => model.QuotationReqDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group date" data-provide="datepicker">
                                    <input type="hidden" id="QuotationReqDate" name="QuotationReqDate" class="form-control" value="@DateTime.Now.ToShortDateString()">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end card -->
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Request" class="btn btn-primary waves-effect waves-light" />
            </div>
        </div>
    </div>
}
<div>
    <a href="@Url.Action("Index","QuotationRequest",new { id = ViewBag.ClientId, User_ID = ViewBag.UserId })" class="btn btn-info waves-effect waves-light">Back </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/bootstrap-datepicker.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        //---------------------------------Box shadow styling starts-------------------------------
        $('.BoxAndShadow').css('box-shadow', ' 0 0 10px #808080');
        $('.BoxAndShadow').hover(function () {

            $(this).css('box-shadow', ' 0 0 20px #808080');
        }, function () {
            $(this).css('box-shadow', ' 0 0 10px #808080');
        });
        //---------------------------------Box shadow styling ends---------------------------------


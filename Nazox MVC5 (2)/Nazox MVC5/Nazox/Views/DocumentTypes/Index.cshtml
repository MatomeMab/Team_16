<p>
    <a href="@Url.Action("Create",new { id = ViewBag.UserId })" class="btn btn-primary waves-effect waves-light">Add Document Type</a>
</p>

<div class="row">
    <div class="col-12">
        <div class="card BoxAndShadow">
            <div class="card-body">
                <h4 class="card-title">WENDA Logistics</h4>
                <p class="card-title-desc">
                    Document Types List
                </p>

                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr style="font-weight:bold">
                            <td>
                                DocumentTypeDescription
                            </td>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocumentTypeDescription)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { ids = item.DocumentType_ID, id = ViewBag.UserId }) |
                                    @Html.ActionLink("Details", "Details", new { ids = item.DocumentType_ID, id = ViewBag.UserId }) |
                                    @Html.ActionLink("Delete", "Delete", new { ids = item.DocumentType_ID, id = ViewBag.UserId })
                                </td>
                            </tr>
                        

                    }
                    
                   </tbody>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

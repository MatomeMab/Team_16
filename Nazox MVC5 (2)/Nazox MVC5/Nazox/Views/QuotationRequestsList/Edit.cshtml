@model Nazox.Models.QuotationRequest


@{
    ViewBag.Title = "Edit";
}
<!-- Lightbox css -->
<link href="~/assets/libs/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create Quotation </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuotationRequest_ID)

    <div class="col-lg-12">
        <div class="card BoxAndShadow">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip04" class="form-label">Client Name</label>
                            @Html.DropDownList("Client_ID", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label">Quotation Request Date</label>
                            @Html.EditorFor(model => model.QuotationReqDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.QuotationReqDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip04" class="form-label">Quotation Request Description</label>
                            @Html.EditorFor(model => model.QuotationReqDescription, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.QuotationReqDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label">From Address</label>
                            @Html.EditorFor(model => model.FromAddress, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.FromAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label">To Address</label>
                            @Html.EditorFor(model => model.ToAddress, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.ToAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <div class="button-items">
                                <a class="popup-gmaps btn btn-light mb-2" href="https://maps.google.com/maps?q=221B+Baker+Street,+London,+United+Kingdom&amp;hl=en&amp;t=v&amp;hnear=221B+Baker+St,+London+NW1+6XE,+United+Kingdom">Open Google Map</a>
                            </div>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label">Quotation Description</label>
                            <div class="form-group" style="padding-right: 2em" id="QuotationDescription">
                                <div class="input-group date">
                                    <textarea class="text-box single-line" id="QuotationDescription" name="QuotationDescription" value="" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label">Quotation Amount</label>
                            <div class="form-group" style="padding-right: 2em" id="Amount">
                                <div class="input-group date">

                                    <p>R:</p> <input class="text-box single-line" type="number" min="0" id="Amount" name="Amount" value="" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip03" class="form-label"></label>
                            <div class="input-group date" data-provide="datepicker">
                                <input type="text" id="QuotationDate" name="QuotationDate" hidden class="form-control" value="@DateTime.Now">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>

        </div>
        </div>
    <div class="row">

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Index","QuotationRequestsList",new { id = ViewBag.UserId })" class="btn btn-info waves-effect waves-light">Back </a>
            </div>

        </div>
        </div>

        
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" hidden value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}







<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>

<!-- Magnific Popup-->
<script src="~/assets/libs/magnific-popup/jquery.magnific-popup.min.js"></script>

<!-- lightbox init js-->
<script src="~/assets/js/pages/lightbox.init.js"></script>


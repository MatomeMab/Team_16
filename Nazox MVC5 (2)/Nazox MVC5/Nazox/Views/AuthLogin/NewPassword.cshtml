@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";


    if (TempData["error"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
                swal("Error!",@Html.Raw(Json.Encode(TempData["error"])),"error");
        </script>
    }

    if (TempData["success"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
            swal("Success!",@Html.Raw(Json.Encode(TempData["success"])),"success");
        </script>
    }
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Dashboard") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="50" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="50" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Welcome Back !</h4>
                                        <p class="text-muted">Reset Password to continue to WENDA Logistics Group.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form class="m-t" role="form" method="post" action=@Url.Action("NewPassword", "AuthLogin")>
                                            @Html.AntiForgeryToken()
                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label for="username">Email Address</label>
                                                <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" placeholder="Enter username">
                                            </div>

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label for="userpassword">Password</label>
                                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                                            </div>

                                            
                                            <div class="mt-4 text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Reset Password</button>
                                            </div>

                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Don't have an account ? <a href=@Url.Action("Index", "AuthRegister") class="fw-medium text-primary"> Register </a> </p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> WENDA Logistics Group
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="authentication-bg">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>


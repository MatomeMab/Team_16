@model Nazox.Models.Inspection

@{
    ViewBag.Title = "Create";
    ViewBag.pTitle = "WENDA Logistics Group";
    ViewBag.pageTitle = "WENDA Logistics Group";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h2>Inspection</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add Inspection</h4>
                        <p class="card-title-desc">
                            Inspection notes
                        </p>

                        <form method="post">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltip01" class="form-label">Name</label>

                                        @Html.DropDownList("Client_ID", ViewBag.Client_ID as SelectList, htmlAttributes: new { @class = "form-control", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger"  })

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltip02" class="form-label">Inspection Type</label>
                                        @Html.DropDownList("InspectionType_ID", null, htmlAttributes: new { @class = "form-control" , @required = "required" })
                                        @Html.ValidationMessageFor(model => model.InspectionType_ID, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltipUsername" class="form-label">Registration Number</label>
                                        <div class="input-group">

                                            @Html.DropDownList("Truck_ID", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(model => model.Truck_ID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-group date" data-provide="datepicker">
                                    <input hidden type="text" id="InspectionTime" name="InspectionTime" class="form-control" value="@DateTime.Now">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <textarea id="InspectionNotetextarea" name="InspectionNotetextarea"  class="form-control" placeholder="Inspection Notes"></textarea>
                            </div>
                        </form>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
            </div>
        </div>
    </div>

}


<div>
    <a href="@Url.Action("Index","Inspections",new { id = ViewBag.ClientId, User_ID = ViewBag.UserId   })" class="btn btn-info waves-effect waves-light">Back </a>
</div>

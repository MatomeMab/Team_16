@model Nazox.Models.Inspection

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inspection</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Inspection_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.InspectionNotetextarea, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InspectionNotetextarea, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InspectionNotetextarea, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InspectionTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InspectionTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InspectionTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InspectionType_ID, "InspectionType_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InspectionType_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InspectionType_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Truck_ID, "Truck_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Truck_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Truck_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Client_ID, "Client_ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Client_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div class="form-horizontal">
       
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add Inspection</h4>
                        <p class="card-title-desc">
                            Inspection notes
                        </p>

                        <form method="post">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltip01" class="form-label">Name</label>

                                        @Html.DropDownList("Client_ID", ViewBag.Client_ID as SelectList, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltip02" class="form-label">Inspection Type</label>
                                        @Html.DropDownList("InspectionType_ID", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.InspectionType_ID, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3 position-relative">
                                        <label for="validationTooltipUsername" class="form-label">Registration Number</label>
                                        <div class="input-group">

                                            @Html.DropDownList("Truck_ID", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                            @Html.ValidationMessageFor(model => model.Truck_ID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-group date" data-provide="datepicker">
                                    <input hidden type="text" id="InspectionTime" name="InspectionTime" class="form-control" value="@DateTime.Now">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <textarea id="InspectionNotetextarea" readonly name="InspectionNotetextarea" class="form-control" ></textarea>
                            </div>
                        </form>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
            </div>
        </div>
    </div>



}





<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.ClientId, User_ID = ViewBag.UserId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

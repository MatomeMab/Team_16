<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
<!-- Responsive datatable examples -->
<link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/css/app.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body ">

                <h4 class="card-title">Schedule</h4>

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">

                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#timeslot" role="tab">
                            <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                            <span class="d-none d-sm-block">Date Time Slots</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#driver" role="tab">
                            <span class="d-block d-sm-none"><i class="fas fa-cog"></i></span>
                            <span class="d-none d-sm-block">Asign  Drivers</span>
                        </a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-3 text-muted">
                    <div class="tab-pane" id="timeslot" role="tabpanel">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

                                        <p>
                                            <a href="@Url.Action("Create","TimeSlots",new { id = ViewBag.UserId })" class="btn btn-primary waves-effect waves-light"> Time Slot</a>
                                        </p>
                                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                                <tr style="font-weight:bold">
                                                    <th>
                                                        Date
                                                    </th>
                                                    <th>
                                                        Start Time
                                                    </th>
                                                    <th>
                                                        End Time
                                                    </th>

                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var item in ViewBag.TimeSlots)
                                            {

                                                    <tr>
                                                        <td>
                                                            @item.Date
                                                        </td>
                                                        <td>
                                                            @item.StartTime
                                                        </td>
                                                        <td>
                                                            @item.EndTime
                                                        </td>
                                                        <td>

                                                            <a href="@Url.Action("Edit","TimeSlots", new { ids = item.TimeSlot_ID,id = ViewBag.UserId })" class="btn btn-primary waves-effect waves-light">Edit</a>
                                                            <a href="@Url.Action("Details","TimeSlots", new { ids = item.TimeSlot_ID,id = ViewBag.UserId })" class="btn btn-success waves-effect waves-light">Details</a>
                                                            <a href="@Url.Action("Delete","TimeSlots", new { ids = item.TimeSlot_ID,id = ViewBag.UserId })" class="btn btn-danger waves-effect waves-light">Delete</a>
                                                           
                                                            <form asp-action="Delete" asp-route-id="@item.TimeSlot_ID" method="post">
                                                                <button type="submit" class="btn btn-danger" onclick="return functionConfirm(this)">
                                                                    Delete
                                                                </button>
                                                            </form>

                                                        </td>
                                                    </tr>
                                               

                                            }
                                                </tbody>

                                        </table>

                                    </div> <!-- end card body-->
                                </div> <!-- end card -->
                            </div><!-- end col-->
                        </div>
                    </div>
                    <div class="tab-pane" id="driver" role="tabpanel">
                        <p>
                            <a href="@Url.Action("Create","DateOrTimeSlotOrDrivers",new { id = ViewBag.UserId })" class="btn btn-primary waves-effect waves-light">Add Driver</a>
                        </p>


                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr style="font-weight:bold">

                                    <th>
                                       Name and Surname
                                    </th>
                                    <th>
                                        Date Or Time Slot
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            

                             <tbody>
                                @foreach (var item in ViewBag.DriverSlotsObj)
                                {
                                    
                                        <tr>
                                            <td>
                                                @item.Employee
                                                

                                            </td>

                                            <td>
                                               
                                                @item.Description
                                                
                                            </td>

                                            <td>
                                                <a href="@Url.Action("Edit","DateOrTimeSlotOrDrivers", new { ids = item.DateorTimeslotDiriver_ID,id = ViewBag.UserId })" class="btn btn-primary waves-effect waves-light">Edit</a>
                                                <a href="@Url.Action("Details","DateOrTimeSlotOrDrivers", new { ids = item.DateorTimeslotDiriver_ID,id = ViewBag.UserId })" class="btn btn-success waves-effect waves-light">Details</a>
                                                <a href="@Url.Action("Delete","DateOrTimeSlotOrDrivers", new { ids = item.DateorTimeslotDiriver_ID,id = ViewBag.UserId })" class="btn btn-danger waves-effect waves-light" onclick="return functionConfirm(this)">Delete</a>
                                            </td>
                                        </tr>
                                    

                                }
                            </tbody>

                            



                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>


</div>

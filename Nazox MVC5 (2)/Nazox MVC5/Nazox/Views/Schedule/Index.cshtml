@model IEnumerable<Nazox.Models.TimeSlot>

@{
    ViewBag.Title = "Schedule";
     if (TempData["Delete"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
                swal("Error!",@Html.Raw(Json.Encode(TempData["Delete"])),"error");
        </script>
    }
    if (TempData["Error"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
                swal("Error!",@Html.Raw(Json.Encode(TempData["Error"])),"error");
        </script>
    }
    if (TempData["Success"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script type="text/javascript">
                swal("Success!",@Html.Raw(Json.Encode(TempData["Success"])),"success");
        </script>
    }
}

<h2>Schedule</h2>

<!-- Sweet Alert-->
<link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

@model Nazox.Models.Service

@{
    ViewBag.Title = "Create";
}

<h2>Create Services</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    


<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-lg-12">
        <div class="card BoxAndShadow">
            <div class="card-body">
                <h4 class="card-title">Create Service</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip01" class="form-label">Service Name</label>

                            @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 position-relative">
                            <label for="validationTooltip02" class="form-label">Description</label>
                            @Html.EditorFor(model => model.ServiceDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ServiceDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>


            </div>
        </div>
        <!-- end card -->
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Index","Services",new { id = ViewBag.UserId })" class="btn btn-info waves-effect waves-light">Back </a>
    </div>
</div>
}
<br />



